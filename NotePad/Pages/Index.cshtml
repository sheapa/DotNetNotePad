@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@if (Model.Note is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    @foreach (var note in Model.Note)
    {
    <div class="text-center">
       <div class="card text-center">
      <div class="card-header">
           <p class="text-muted"> 
               @if (@note.Status == true)
                        {
                           <p> Completed </p>
                        }
                        else
                        {
                            <p> In Progress </p>
                        }
           </p>
      </div>
  
      <div class="card-body">
        <h4 class="card-title">@note.Title</h4>
        <h5 class="card-text text-info">@note.Description</h5>

         <form method="post">
                 <input asp-for="UpdateModel.Id" value="@note.Id" type="hidden" />
                 <div class="form-group">
                     <input asp-for="UpdateModel.Description" value="@note.Description" class="form-control" />
                 </div> 
                 <div class="form-group">
                 <input type="submit" value="Update Note" class="btn btn-primary" />
                 </div>
                
            </form>
       
      </div>
      <div class="card-footer text-muted">
           @note.NoteDate
        <div class="d-flex justify-content-end">
       
                 
        <a href="#" class="btn btn-danger">Delete Note</a>
       </div>
      </div>
    </div>
    </div>
    }
  
}
