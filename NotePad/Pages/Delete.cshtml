@page
@model NotePad.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

@if (Model.Note is null)
{
    <h4>The requested record was not found</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete note titled @Model.Note.Title created on @Model.Note.NoteDate?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Order" class="btn btn-danger" />
        </div>
    </form>
}